<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/farmFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <include
        android:id="@+id/headerLayout"
        layout="@layout/fragment_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- HUD de bayas totales arriba a la derecha -->
    <LinearLayout
        android:id="@+id/containerBayasTotales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/imgBaya"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baya"
            android:contentDescription="Icono baya"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/txtBayasTotales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x0"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Cuerpo central -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/containerBayasTotales"
        app:layout_constraintBottom_toTopOf="@+id/footerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/txtPasos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pasos totales: 0"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/txtPasosRestantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pasos para la siguiente baya: 0"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/imgArbol"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Ãrbol de bayas" />

        <TextView
            android:id="@+id/txtBayas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bayas disponibles: 0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- Cargando -->
    <ProgressBar
        android:id="@+id/progressFarm"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Footer -->
    <include
        android:id="@+id/footerLayout"
        layout="@layout/fragment_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
